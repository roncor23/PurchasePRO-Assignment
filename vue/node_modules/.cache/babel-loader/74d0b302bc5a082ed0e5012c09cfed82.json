{"ast":null,"code":"export default {\n  name: 'ProductCard',\n  props: {\n    pid: Number,\n    title: String,\n    description: String,\n    price: String\n  },\n\n  data() {\n    return {\n      cart: [],\n      quantity: 1 // Default quantity is 1\n\n    };\n  },\n\n  methods: {\n    addToCart() {\n      this.$toastr.success(`Added ${this.price} to the cart with quantity ${this.quantity}!`);\n      let sizeprod = {};\n      const size = {\n        pid: this.pid,\n        title: this.title,\n        description: this.description,\n        price: this.price,\n        quantity: this.quantity\n      };\n      sizeprod = { ...size\n      };\n      this.cart.push(sizeprod);\n    },\n\n    checkout() {\n      this.$emit('checkout', this.cart); // Clear the cart after checkout\n\n      this.cart = [];\n    },\n\n    incrementQuantity() {\n      this.quantity += 1;\n    },\n\n    decrementQuantity() {\n      if (this.quantity > 1) {\n        this.quantity -= 1;\n      }\n    }\n\n  },\n  computed: {\n    imageSrc() {\n      // Temporary Image Placeholder\n      return 'https://via.placeholder.com/800x450';\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA8BA,eAAe;EACbA,IAAI,EAAE,aADO;EAEbC,KAAK,EAAE;IACLC,GAAG,EAAEC,MADA;IAELC,KAAK,EAAEC,MAFF;IAGLC,WAAW,EAAED,MAHR;IAILE,KAAK,EAAEF;EAJF,CAFM;;EAQbG,IAAI,GAAG;IACL,OAAO;MACLC,IAAI,EAAE,EADD;MAELC,QAAQ,EAAE,CAFL,CAEQ;;IAFR,CAAP;EAID,CAbY;;EAcbC,OAAO,EAAE;IACPC,SAAS,GAAG;MAEV,KAAKC,OAAL,CAAaC,OAAb,CAAsB,SAAQ,KAAKP,KAAK,8BAA8B,KAAKG,QAAS,GAApF;MAEA,IAAIK,QAAO,GAAI,EAAf;MAEA,MAAMC,IAAG,GAAI;QACXd,GAAG,EAAE,KAAKA,GADC;QAEXE,KAAK,EAAE,KAAKA,KAFD;QAGXE,WAAW,EAAE,KAAKA,WAHP;QAIXC,KAAK,EAAE,KAAKA,KAJD;QAKXG,QAAQ,EAAE,KAAKA;MALJ,CAAb;MAQAK,QAAO,GAAI,EACT,GAAGC;MADM,CAAX;MAGA,KAAKP,IAAL,CAAUQ,IAAV,CAAeF,QAAf;IAED,CApBM;;IAqBPG,QAAQ,GAAG;MAET,KAAKC,KAAL,CAAW,UAAX,EAAuB,KAAKV,IAA5B,EAFS,CAGT;;MACA,KAAKA,IAAL,GAAY,EAAZ;IACD,CA1BM;;IA2BPW,iBAAiB,GAAG;MAClB,KAAKV,QAAL,IAAiB,CAAjB;IACD,CA7BM;;IA8BPW,iBAAiB,GAAG;MAClB,IAAI,KAAKX,QAAL,GAAgB